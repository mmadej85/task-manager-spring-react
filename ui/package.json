{
  "name": "todo-list-ui",
  "version": "1.0.0",
  "description": "Example project to play with spring-boot and react - build using gradle, npm and webpack",
  "main": "./src/App.js",
  "author": "Maciej Madej",
  "readme": "../README.md",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mmadej85/todo-list.git"
  },
  "scripts": {
    "clean": "rimraf dist",
    "lint": "eslint app test",
    "test": "mocha",
    "e2e-setup": "selenium-standalone install --version=2.53.1 --drivers.chrome.version=2.24",
    "e2e": "nightwatch --test test/e2e/taskListTest.js",
    "start": "webpack-dev-server --colors --config webpack.config.dev.js",
    "build": "set NODE_ENV=production && webpack --progress --colors --config webpack.config.prod.js"
  },
  "keywords": [
    "react",
    "reactjs",
    "boilerplate",
    "hot",
    "reload",
    "hmr",
    "live",
    "edit",
    "webpack"
  ],
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-loader": "^6.2.5",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.16.3",
    "chai": "^3.5.0",
    "css-loader": "^0.25.0",
    "enzyme": "^2.4.1",
    "eslint": "^3.7.1",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-react": "^6.3.0",
    "hapi": "^15.1.1",
    "jsdom": "^9.6.0",
    "mocha": "^3.1.0",
    "mocha-jsdom": "^1.1.0",
    "nightwatch": "^0.9.8",
    "randomstring": "^1.1.5",
    "react-addons-test-utils": "^15.3.2",
    "react-hot-loader": "^3.0.0-beta.5",
    "rimraf": "^2.5.4",
    "selenium-standalone": "^5.7.2",
    "sinon": "^1.17.6",
    "style-loader": "^0.13.1",
    "webpack": "1.13.2",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  }
}
